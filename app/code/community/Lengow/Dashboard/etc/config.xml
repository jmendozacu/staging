<?xml version="1.0"?>
<config>
    <modules>
        <Lengow_Dashboard>
            <version>2.0.1.5</version>
        </Lengow_Dashboard>
    </modules>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <dashboard before="Mage_Adminhtml">Lengow_Dashboard_Adminhtml</dashboard>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <models>
            <dashboard>
                <class>Lengow_Dashboard_Model</class>
                <resourceModel>dashboard_mysql4</resourceModel>
            </dashboard>       
            <dashboard_mysql4>
                <class>Lengow_Dashboard_Model_Mysql4</class>
                <entities>
                    <manageorders_log>
                        <table>lengow_log</table>
                    </manageorders_log>
                </entities>
            </dashboard_mysql4>
        </models>
        <resources>
            <dashboard_setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </dashboard_setup>
            <dashboard_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </dashboard_write>
            <dashboard_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </dashboard_read>
        </resources>
        <blocks>
            <adminhtml>
                <rewrite>
                    <dashboard_diagrams>Lengow_Dashboard_Block_Adminhtml_Dashboard_Diagrams</dashboard_diagrams>
                </rewrite>
            </adminhtml>
            <dashboard>
                <class>Lengow_Dashboard_Block</class>
            </dashboard>
        </blocks>
        <helpers>
            <dashboard>
                <class>Lengow_Dashboard_Helper</class>
            </dashboard>
        </helpers>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Lengow_Dashboard>
                    <files>
                        <default>Lengow_Connector.csv</default>
                    </files>
                </Lengow_Dashboard>
            </modules>
        </translate>
    </adminhtml>
</config>
