<?xml version="1.0"?>
<config>
    <modules>
        <Tatva_Productproblem>
            <version>0.1.0</version>
        </Tatva_Productproblem>
    </modules>
    <frontend>
        <routers>
            <productproblem>
                <use>standard</use>
                <args>
                    <module>Tatva_Productproblem</module>
                    <frontName>productproblem</frontName>
                </args>
            </productproblem>
        </routers>
        <layout>
            <updates>
                <productproblem>
                    <file>productproblem.xml</file>
                </productproblem>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<productproblem>
				<use>admin</use>
				<args>
					<module>Tatva_Productproblem</module>
					<frontName>productproblem</frontName>
				</args>
			</productproblem>
        </routers>
    </admin>
    <adminhtml>
	  <!-- <menu>
			<tatva module="productproblem">
				<title>Tatvasoft</title>
				<sort_order>71</sort_order>
				<children>
					<items module="productproblem">
						<title>Manage Productproblem</title>
						<sort_order>0</sort_order>
						<action>productproblem/adminhtml_productproblem</action>
					</items>
				</children>
			</tatva>
		</menu>-->
		<acl>
    	<resources>
    		<all>
    			<title>Allow Everything</title>
    		</all>
    		<admin>
    			<children>
					<children>
						<Tatva_productproblem>
							<title>Tatva Productproblem</title>
							<sort_order>11</sort_order>
						</Tatva_productproblem>
					</children>
                    <system>
    					<children>
    						<config>
    							<children>
    								<productproblem translate="title" module="productproblem">
    									<title>Productproblem</title>
    								</productproblem>
    							</children>
    						</config>
    					</children>
    				</system>
                </children>
    		</admin>
    	</resources>
    </acl>
		<layout>
			<updates>
				<productproblem>
					<file>productproblem.xml</file>
				</productproblem>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <productproblem>
                <class>Tatva_Productproblem_Model</class>
                <resourceModel>productproblem_mysql4</resourceModel>
            </productproblem>
            <productproblem_mysql4>
                <class>Tatva_Productproblem_Model_Mysql4</class>
                <entities>
                    <productproblem>
                        <table>productproblem</table>
                    </productproblem>
                </entities>
            </productproblem_mysql4>
        </models>
        <resources>
            <productproblem_setup>
                <setup>
                    <module>Tatva_Productproblem</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </productproblem_setup>
            <productproblem_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </productproblem_write>
            <productproblem_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </productproblem_read>
        </resources>
        <blocks>
            <productproblem>
                <class>Tatva_Productproblem_Block</class>
            </productproblem>
        </blocks>
        <helpers>
            <productproblem>
                <class>Tatva_Productproblem_Helper</class>
            </productproblem>
        </helpers>
    </global>
    <default>
        <productproblem>
            <productproblem>
                <active>1</active>
            </productproblem>
        </productproblem>
    </default>
</config>