<?xml version="1.0"?>
<config>
    <modules>
        <Tatva_Checkout>
            <version>0.1.0</version>
        </Tatva_Checkout>
    </modules>
    <global>
		<blocks>
        	<tatvacheckout>
        		<class>Tatva_Checkout_Block</class>
        	</tatvacheckout>
			<checkout>
				<rewrite>
					<cart_sidebar>Tatva_Checkout_Block_Cart_Sidebar</cart_sidebar>
				</rewrite>
			</checkout>
        </blocks>
		<helpers>
        	<tatvacheckout>
        		<class>Tatva_Checkout_Helper</class>
        	</tatvacheckout>
        </helpers>
        	
    </global>
    <frontend>
        <routers>
			<tatvacheckout>
				<use>standard</use>
				<args>
					<module>Tatva_Checkout</module>
					<frontName>tatvacheckout</frontName>
				</args>
			</tatvacheckout>
            <checkout>
                <args>
                    <modules>
                        <Tatva_Checkout before="Mage_Checkout">Tatva_Checkout</Tatva_Checkout>
                    </modules>
                </args>
            </checkout>
		</routers>
        <layout>
            <updates>
                <tatvacheckout>
                    <file>tatvacheckout/tatvacheckout.xml</file>
                </tatvacheckout>
            </updates>
        </layout>
	    <translate>
            <modules>
                <Tatva_Checkout>
                    <files>
                        <default>Mage_Checkout.csv</default>
                        <checkout>Tatva_Checkout.csv</checkout>
                    </files>
                </Tatva_Checkout>
            </modules>
        </translate>
    </frontend>
</config>
