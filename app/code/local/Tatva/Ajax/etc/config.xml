<?xml version="1.0"?>
<config>
    <modules>
        <Tatva_Ajax>
            <version>0.1.0</version>
        </Tatva_Ajax>
    </modules>
    <frontend>
        <routers>
            <ajax>
                <use>standard</use>
                <args>
                    <module>Tatva_Ajax</module>
                    <frontName>ajax</frontName>
                </args>
            </ajax>
            <checkout>
                <args>
                    <modules>
                        <Tatva_Ajax before="Mage_Checkout">Tatva_Ajax</Tatva_Ajax>
                    </modules>
                </args>
            </checkout>
<!--            <catalogsearch>
                <args>
                    <modules>
                        <Tatva_Ajax before="Mage_CatalogSearch">Tatva_Ajax</Tatva_Ajax>
                    </modules>
                </args>
            </catalogsearch>-->
        </routers>
        <layout>
            <updates>
                <ajax>
                    <file>ajax.xml</file>
                </ajax>
            </updates>
        </layout>

    </frontend>
    <admin>
        <routers>
            <ajax>
                <use>admin</use>
                <args>
                    <module>Tatva_Ajax</module>
                    <frontName>ajax</frontName>
                </args>
            </ajax>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <ajax translate="title" module="ajax">
                                            <title>Ajax for Catalog</title>
                                        </ajax>
                                        <commercial_invoice translate="title" module="ajax">
                                            <title>Commercial Invoice Settings</title>
                                        </commercial_invoice>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <global>
        <models>
            <ajax>
                <class>Tatva_Ajax_Model</class>
                <resourceModel>ajax_mysql4</resourceModel>
            </ajax>
            <ajax_mysql4>
                <class>Tatva_Ajax_Model_Mysql4</class>
                <entities>
                    <ajax>
                        <table>ajax</table>
                    </ajax>
                </entities>
            </ajax_mysql4>
        </models>
        <resources>
            <ajax_setup>
                <setup>
                    <module>Tatva_Ajax</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ajax_setup>
            <ajax_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ajax_write>
            <ajax_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ajax_read>
        </resources>
        <blocks>
            <ajax>
                <class>Tatva_Ajax_Block</class>
            </ajax>
            <checkout>
                <rewrite>
                    <cart>Tatva_Ajax_Block_Ajaxcheckoutcart</cart>
                </rewrite>
            </checkout>
            <catalogsearch>
                <rewrite>
                    <result>Tatva_Ajax_Block_CatalogSearch_Result</result>
                </rewrite>
            </catalogsearch>
        </blocks>
        <helpers>
            <ajax>
                <class>Tatva_Ajax_Helper</class>
            </ajax>
        </helpers>
        <events>
            <controller_action_postdispatch>
                <observers>
                    <tatva_ajax_observer>
                        <type>singleton</type>
                        <class>Tatva_Ajax_Model_Observer</class>
                        <method>getListproduct</method>
                    </tatva_ajax_observer>
                </observers>
            </controller_action_postdispatch>
        </events>
    </global>
</config>