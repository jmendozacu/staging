<layout version="1.0.0">
	<adminhtml_magebackup_profile_index>
		<reference name="head">
			<action method="addItem"><type>js_css</type><name>magebackup/magebackup.css</name></action>
		</reference>
		<reference name="content">
			<block type="magebackup/adminhtml_profile" name="admin.magebackup.profile" />
		</reference>
	</adminhtml_magebackup_profile_index>

	<adminhtml_magebackup_profile_new>
		<reference name="head">
			<action method="addItem"><type>js_css</type><name>magebackup/magebackup.css</name></action>
			<action method="addItem"><type>js_css</type><name>magebackup/filetree.css</name></action>
			<action method="addJs"><script>magebackup/jquery.min.js</script></action>
			<action method="addJs"><script>magebackup/jquery.noconflict.js</script></action>
			<action method="addJs"><script>magebackup/tooltip.js</script></action>
			<action method="addJs"><script>magebackup/filetree.js</script></action>
			<action method="addJs"><script>magebackup/magebackup.js</script></action>
		</reference>
	</adminhtml_magebackup_profile_new>

	<adminhtml_magebackup_profile_edit>
		<reference name="head">
			<action method="addItem"><type>js_css</type><name>magebackup/magebackup.css</name></action>
			<action method="addItem"><type>js_css</type><name>magebackup/filetree.css</name></action>
			<action method="addJs"><script>magebackup/jquery.min.js</script></action>
			<action method="addJs"><script>magebackup/jquery.noconflict.js</script></action>
			<action method="addJs"><script>magebackup/tooltip.js</script></action>
			<action method="addJs"><script>magebackup/filetree.js</script></action>
			<action method="addJs"><script>magebackup/magebackup.js</script></action>
		</reference>
	</adminhtml_magebackup_profile_edit>

	<adminhtml_magebackup_profile_loadfiles>
		<block type="core/text_list" name="root" output="toHtml">
			<block type="magebackup/adminhtml_profile_edit_tabs_files_loadfiles" name="magebackup.profile.edit.tabs.files.loadfiles" />
		</block>
	</adminhtml_magebackup_profile_loadfiles>

	<adminhtml_magebackup_backup_index>
		<reference name="head">
			<action method="addItem"><type>js_css</type><name>magebackup/magebackup.css</name></action>
		</reference>
		<reference name="content">
			<block type="magebackup/adminhtml_backup" name="admin.magebackup.backup" />
		</reference>
	</adminhtml_magebackup_backup_index>

	<adminhtml_magebackup_backup_ajax>
		<reference name="head">
			<action method="addJs"><script>magebackup/jquery.min.js</script></action>
			<action method="addJs"><script>magebackup/jquery.noconflict.js</script></action>
			<action method="addJs"><script>magebackup/magebackup.js</script></action>
			<action method="addItem"><type>js_css</type><name>magebackup/magebackup.css</name><params/></action>
		</reference>

		<reference name="content">
			<block type="magebackup/adminhtml_backup_ajax" name="admin.magebackup.backup.ajax" template="magebackup/backup/ajax.phtml" />
		</reference>
	</adminhtml_magebackup_backup_ajax>
</layout>