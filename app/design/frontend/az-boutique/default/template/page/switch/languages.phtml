<?php
/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 *
 */
?>

	<?php
		$currStoreName = '';
		$currStoreCode = '';
		$html = array();
		$html[] = '<ul class="dropdown-menu left-hand">';
		foreach(Mage::app()->getWebsites() as $_store)
		{

            foreach($_store->getStores() as $storedata)
            {
              $store_name=$storedata->getName();
              $store_code=$storedata->getCode();
              
			 if($storedata->getIsActive() == 1)
			  { 

            $url=$_store->getDefaultStore()->getBaseUrl();
			$storeName = $this->__($this->escapeHtml($_store->getName()));
			$storeId = $_store->getId();
			$storeCode = $_store->getCode(); //$storeCode = Mage::getStoreConfig('general/locale/code', $storeId);
			$css = 'style="background-image:url('. $this->getSkinUrl('images/flags/'. $store_code .'.png') .');"';



			if(Mage::app()->getStore()->getCode() == $store_code)
			{
				$currStoreName = $storeName;
				$currStoreCode = $storedata->getName();
				$currStore_code = $storedata->getCode();
				$html[] = '<li class="current"><span class="label dropdown-icon" '. $css .'>&nbsp;</span>'. $currStoreCode .'</li>';
			}
			else
			{
				$html[] = '<li><a href="'. $url .'"><span class="label dropdown-icon" '. $css .'>&nbsp;</span>'. $store_name .'</a></li>';
			}
          }
		 } 
		}
		$html[] = '</ul>';
    ?>

    <div class="dropdown lang-switcher item item-right">
        <div class="dropdown-toggle cover">
            <div>
            	<div class="label dropdown-icon flag"
                style="background-image:url(<?php echo $this->getSkinUrl('images/flags/'. $currStore_code .'.png'); ?>)">&nbsp;</div>
                <?php /*?> <p class="label hide-below-1280"><?php echo $this->__('Language'); ?>:</p> <?php */?>
                <div class="value"><?php echo $currStoreCode; ?></div>
                <span class="caret">&nbsp;</span>
            </div>
        </div>
        <?php echo implode('', $html); ?>
    </div>

