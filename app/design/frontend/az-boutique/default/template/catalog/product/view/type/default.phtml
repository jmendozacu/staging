$_product = $this->getProduct();
$_coreHelper = $this->helper('core');
$_taxHelper  = $this->helper('tax');
$priceIncTax = $_taxHelper->getPrice($_product, $_product->getFinalPrice(), true);
?>
<div itemprop="offers" itemscope="" itemtype="http://schema.org/Offer">

    <meta itemprop="price" content="<?php  echo $priceIncTax; ?>">
    <meta itemprop="priceCurrency" content="<?php echo Mage::app()->getStore()->getCurrentCurrencyCode();?>">
    <meta itemprop="itemCondition" content="NewCondition">

    <?php
    //display custom availability message
    $productAvailabilityStatus = $this->getProductAvailabilityStatus();
    $availabilityMessage = '';

    if ($productAvailabilityStatus)
    {
        $availabilityMessage = $productAvailabilityStatus->getMessage();
        ?>
        <meta itemprop="availability" content="InStock">
        <div id="div_availability" name="div_availability" ><?php echo $this->__('Availability'); ?> : <?php echo $availabilityMessage; ?></div>
	    <?php
    }
    else
    {
        $availabilityMessage = $productAvailabilityStatus->getMessage();
        ?>
        <meta itemprop="availability" content="OutOfStock">
        <div id="div_availability" name="div_availability" ><?php echo $this->__('Availability'); ?> : <?php echo $availabilityMessage; ?></div>
    <?php
    }
