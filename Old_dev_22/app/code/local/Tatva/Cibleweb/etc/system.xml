<config>
    <tabs>
        <cibleweb translate="label" module="cibleweb">
            <label>Cibleweb</label>
            <sort_order>170</sort_order>
        </cibleweb>
    </tabs>
    <sections>
        <cibleweb-config translate="label" module="cibleweb">
            <class>separator-top</class>
            <label>Iziflux</label>
            <tab>cibleweb</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <config translate="label" module="cibleweb">
                    <label>Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enable translate="label" module="cibleweb">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <type translate="label" module="cibleweb">
                            <label>Transfet type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>cibleweb/system_config_source_type</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </type>
                    	<filename translate="label" module="cibleweb">
                           <label>File name</label>
                           <frontend_type>text</frontend_type>
                           <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                      	</filename>
                    	<path translate="label" module="cibleweb">
                           <label>Path</label>
                           <frontend_type>text</frontend_type>
                           <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
		                   <comment>Directory must end with /</comment>
                      </path>
					  <hot translate="label" module="cibleweb">
						   <label>Hote FTP [:Port]</label>
						   <frontend_type>text</frontend_type>
						   <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
					  </hot>
					  <username translate="label" module="cibleweb">
						   <label>Username</label>
						   <frontend_type>text</frontend_type>
						   <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
					  </username>
					  <password translate="label" module="cibleweb">
						   <label>Password</label>
						   <frontend_type>text</frontend_type>
						   <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
					  </password>
					<passivemode translate="label" module="cibleweb">
						<label>Passive mode</label>
						<frontend_type>select</frontend_type>
						<source_model>adminhtml/system_config_source_yesno</source_model>
						<sort_order>80</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
					</passivemode>
                    </fields>
                </config>
             </groups>
        </cibleweb-config>
    </sections>
</config>
