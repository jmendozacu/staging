<?xml version="1.0"?>
<config>
    <modules>
        <Lengow_Export>
            <version>2.0.1.5</version>
        </Lengow_Export>
    </modules>
    <admin>
        <routers>
            <export>
                <use>admin</use>
                <args>
                    <module>Lengow_Export</module>
                    <frontName>lengow</frontName>
                </args>
            </export>
            <adminhtml>
                <args>
                    <modules>
                        <export before="Mage_Adminhtml">Lengow_Export_Adminhtml</export>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <models>
            <export>
                <class>Lengow_Export_Model</class>
                <resourceModel>export_mysql4</resourceModel>
            </export>       
            <export_mysql4>
                <class>Lengow_Export_Model_Mysql4</class>
                <entities>
                    <manageorders_log>
                        <table>lengow_log</table>
                    </manageorders_log>
                </entities>
            </export_mysql4>
        </models>
        <resources>
            <export_setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </export_setup>
            <export_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </export_write>
            <export_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </export_read>
        </resources>
        <blocks>
            <export>
                <class>Lengow_Export_Block</class>
            </export>
        </blocks>
        <helpers>
            <export>
                <class>Lengow_Export_Helper</class>
            </export>
        </helpers>
        <events>
            <catalog_product_new_action>
                <observers>
                    <lengow__export_product_new_action>
                        <type>singleton</type>
                        <class>Lengow_Export_Model_Observer</class>
                        <method>autoExportProduct</method>
                    </lengow__export_product_new_action>
                </observers>
            </catalog_product_new_action>
        </events>
    </global>
    <frontend>
        <routers>
            <lengow>
                <use>standard</use>
                <args>
                    <module>Lengow_Export</module>
                    <frontName>lengow</frontName>
                </args>
            </lengow>
        </routers>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Lengow_Export>
                    <files>
                        <default>Lengow_Connector.csv</default>
                    </files>
                </Lengow_Export>
            </modules>
        </translate>
        <menu>
            <lengow>
                <title>Lengow</title>
                <sort_order>20</sort_order>
                <children>
                    <export translate="title" module="export">
                        <title>Manage Products Export</title>
                        <action>adminhtml/lengow_export</action>
                        <sort_order>200</sort_order>
                    </export>
                </children>
            </lengow>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <export translate="title" module="export">
                                            <title>Products</title>
                                        </export>
                                    </children>
                                </config>
                            </children>
                        </system>
                        <lengow translate="title" module="export">
                            <title>Lengow</title>
                            <children>
                                <export translate="title" module="export">
                                    <title>Manage Products Export</title>
                                </export>
                            </children>
                        </lengow>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <crontab>
        <jobs>
            <lengow_export_feed>
                <schedule>
                    <cron_expr>0 */4 * * *</cron_expr>
                </schedule>
                <run>
                    <model>export/observer::cron</model>
                </run>
            </lengow_export_feed>
        </jobs>
    </crontab>
    <default>
        <export>
            <global>
                <valid_ip></valid_ip>
                <export_only_selected>0</export_only_selected>
                <export_soldout>0</export_soldout>
                <producttype>simple,configurable</producttype>
            </global>
            <data>
                <default_shipping_delay>2</default_shipping_delay>
                <default_shipping_price></default_shipping_price>
                <default_shipping_method>flatrate_flatrate</default_shipping_method>
                <shipping_price_based_on>FR</shipping_price_based_on>
                <formatdata>0</formatdata>
                <levelcategory>5</levelcategory>
                <count_images>5</count_images>
                <keephtml>0</keephtml>
            </data>
            <performances>
                <usesavefile>0</usesavefile>
                <active_cron>0</active_cron>
            </performances>
        </export>
    </default>
</config>
