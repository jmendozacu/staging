<config>
    <modules>
        <Quadra_Cybermutforeign>
            <version>2.0.4</version>
        </Quadra_Cybermutforeign>
    </modules>
    <global>
        <models>
            <cybermutforeign>
                <class>Quadra_Cybermutforeign_Model</class>
                <resourceModel>cybermutforeign_mysql4</resourceModel>
            </cybermutforeign>
            <cybermutforeign_mysql4>
                <class>Quadra_Cybermutforeign_Model_Mysql4</class>
                <entities>
                    <api_debug>
                        <table>cybermutforeign_api_debug</table>
                    </api_debug>
                </entities>
            </cybermutforeign_mysql4>
        </models>
        <blocks>
            <cybermutforeign>
                <class>Quadra_Cybermutforeign_Block</class>
            </cybermutforeign>
        </blocks>
        <helpers>
            <cybermutforeign>
                <class>Quadra_Cybermutforeign_Helper</class>
            </cybermutforeign>
        </helpers>
        <resources>
            <cybermutforeign_setup>
                <setup>
                    <module>Quadra_Cybermutforeign</module>
                    <class>Quadra_Cybermutforeign_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </cybermutforeign_setup>
            <cybermutforeign_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </cybermutforeign_write>
            <cybermutforeign_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </cybermutforeign_read>
        </resources>
        <payment>
            <cybermutforeign_payment>
                <languages>
                    <FR>
                        <code>FR</code>
                        <name>Français</name>
                    </FR>
                    <EN>
                        <code>EN</code>
                        <name>Anglais</name>
                    </EN>
                    <ES>
                        <code>ES</code>
                        <name>Espagnol</name>
                    </ES>
                    <DE>
                        <code>DE</code>
                        <name>Allemand</name>
                    </DE>
                    <IT>
                        <code>IT</code>
                        <name>Italien</name>
                    </IT>
                    <NL>
                        <code>NL</code>
                        <name>Néerlandais</name>
                    </NL>
                </languages>
            </cybermutforeign_payment>
        </payment>
    </global>
    <frontend>
        <secure_url>
            <cybermutforeign_payment>/cybermutforeign/payment</cybermutforeign_payment>
        </secure_url>
        <routers>
            <cybermutforeign>
                <use>standard</use>
                <args>
                    <module>Quadra_Cybermutforeign</module>
                    <frontName>cybermutforeign</frontName>
                </args>
            </cybermutforeign>
        </routers>
        <translate>
            <modules>
                <Quadra_Cybermutforeign>
                    <files>
                        <default>Quadra_Cybermutforeign.csv</default>
                    </files>
                </Quadra_Cybermutforeign>
            </modules>
        </translate>
        <layout>
            <updates>
                <cybermutforeign>
                    <file>cybermutforeign.xml</file>
                </cybermutforeign>
            </updates>
        </layout>
        <events>
            <checkout_controller_multishipping_shipping_post>
                <observers>
                    <cybermutforeign>
                        <type>model</type>
                        <class>cybermutforeign/observer</class>
                        <method>initRedirect</method>
                    </cybermutforeign>
                </observers>
            </checkout_controller_multishipping_shipping_post>
            <sales_order_place_after>
                <observers>
                    <cybermutforeign>
                        <type>model</type>
                        <class>cybermutforeign/observer</class>
                        <method>disableEmailForMultishipping</method>
                    </cybermutforeign>
                </observers>
            </sales_order_place_after>
            <checkout_multishipping_controller_success_action>
                <observers>
                    <cybermutforeign>
                        <type>model</type>
                        <class>cybermutforeign/observer</class>
                        <method>multishippingRedirectUrl</method>
                    </cybermutforeign>
                </observers>
            </checkout_multishipping_controller_success_action>
        </events>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Quadra_Cybermutforeign>
                    <files>
                        <default>Quadra_Cybermut.csv</default>
                    </files>
                </Quadra_Cybermutforeign>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <cybermutforeign_payment>
                <model>cybermutforeign/payment</model>
                <title>CyberMUT-P@iement</title>
                <allowspecific>0</allowspecific>
                <transaction_type>O</transaction_type>
                <empty_cart>1</empty_cart>
                <several_times_payment>0</several_times_payment>
                <terms>3</terms>
            </cybermutforeign_payment>
        </payment>
    </default>
</config>
