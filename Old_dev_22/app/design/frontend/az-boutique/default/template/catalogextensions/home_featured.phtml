<?php
/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Product_List
 */
?>
<?php
    $_productCollection=$this->_getHomeProductCollection();
    $_helper = $this->helper('catalog/output');
?>



    <?php if(!$_productCollection->count()): ?>
        <p class="note-msg"><?php echo $this->__('There are no products matching the selection.') ?></p>
    <?php else: ?>

        <?php
             $width = Mage::getStoreConfig('catalogextensions/config2/max_product') ? Mage::getStoreConfig('catalogextensions/config2/max_product') * 166 : 800;
             $width = Mage::getStoreConfig('catalogextensions/config2/slider') ? 845 : $width;
             $auto =  Mage::getStoreConfig('catalogextensions/config2/auto') ? Mage::getStoreConfig('catalogextensions/config2/time') : 2;
             $scroll =  Mage::getStoreConfig('catalogextensions/config2/scroll') ? Mage::getStoreConfig('catalogextensions/config2/scroll') : 4;
        ?>


        <div class="product-title">
             <div class="navleft-cur"></div>

            <div class="navright-cur"></div>
         </div>

        <?php if(Mage::getStoreConfig('catalogextensions/config2/slider')) { ?>

                <div id="carouselContainer">
                                  	<a href="#" class="carousel-prev">Prev</a>
                                    <a href="#" class="carousel-next">Next</a>
                    				<ul class="imageCarousel" style="margin: 0;overflow: hidden;padding: 0;position: relative;left:0">
									<?php foreach ($_productCollection as $_product): ?>
                                    	<li><div class="catalogextensions-product-content">
                                    	<div class="top-product-img"><a href="<?php echo $_product->getProductUrl() ?>"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(120); ?>"  alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" width="120" height="120"/></a></div>
                                        <h3><a href="<?php echo $_product->getProductUrl() ?>" title="Pen Sets"><?php echo $_product->getName();?></a></h3>
                                        <div class="product-rating-star" style="height:15px;"><?php echo $this->getReviewsSummaryHtml($_product,  'short'); ?></div>
                                        <div class="sp-product-buy clearfix">
                                            <div class="top-product-price"><?php if($_product->getPrice() != $_product->getFinalPrice())
                                                      {  ?>
                                                         <strike><?php echo $formattedPrice = Mage::helper('core')->currency($_product->getPrice(),true,false); ?></strike><br />
                                                     <?php } ?>
                                                     <?php echo $formattedPrice = Mage::helper('core')->currency($_product->getFinalPrice(),true,false); ?></div>
                                            <div class="add-cart"> <a href="<?php echo $this->getAddToCartUrl($_product) ?>" title="Add to Cart"><img src="<?php echo $this->getSkinUrl('images/add-cart-btn.png'); ?>" width="36" height="30"/></a></div>
                                        </div>
                                    </div></li>
									<?php endforeach; ?>
                                    </ul>

                                  </div>

        <?php } else { ?>
            <div class="product-content" style="width: <?php echo $width ?>px">
                <?php $_collectionSize = $_productCollection->count() ?>
                <?php $_columnCount = Mage::getStoreConfig('featured/config/max_column') ? Mage::getStoreConfig('featured/config/max_column') : 5; ?>
                <?php $i=0; foreach ($_productCollection as $_product): ?>
                    <?php if ($i++%$_columnCount==0): ?>
                    <ul class="products-grid" style="width: <?php echo $width ?>px">
                    <?php endif ?>
                        <li class="item<?php if(($i-1)%$_columnCount==0): ?> first<?php elseif($i%$_columnCount==0): ?> last<?php endif; ?>">
                            <a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(135); ?>" width="135" height="135" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" /></a>
                            <h2 class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>"><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?></a></h2>
                            <?php if($_product->getRatingSummary()): ?>
                            <?php echo $this->getReviewsSummaryHtml($_product, 'short') ?>
                            <?php endif; ?>
                            <?php echo $this->getPriceHtml($_product, true) ?>
                            <div class="actions">
                                <?php if($_product->isSaleable()): ?>
                                    <button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
                                <?php else: ?>
                                    <p class="availability out-of-stock"><span><?php echo $this->__('Out of stock') ?></span></p>
                                <?php endif; ?>
                                <ul class="add-to-links">
                                    <?php if ($this->helper('wishlist')->isAllow()) : ?>
                                        <li><a href="<?php echo $this->helper('wishlist')->getAddUrl($_product) ?>" class="link-wishlist"><?php echo $this->__('Add to Wishlist') ?></a></li>
                                    <?php endif; ?>
                                    <?php if($_compareUrl=$this->getAddToCompareUrl($_product)): ?>
                                        <li><span class="separator">|</span> <a href="<?php echo $_compareUrl ?>" class="link-compare"><?php echo $this->__('Add to Compare') ?></a></li>
                                    <?php endif; ?>
                                </ul>
                            </div>
                        </li>
                    <?php if ($i%$_columnCount==0 || $i==$_collectionSize): ?>
                    </ul>
                    <?php endif ?>
                <?php endforeach ?>
                <script type="text/javascript">decorateGeneric($$('ul.products-grid'), ['odd','even','first','last'])</script>
            </div>
        <?php } ?>
    <?php endif; ?>
<script type="text/javascript">
jQuery(document).ready(function() {
    jQuery('.imageCarousel').jcarousel({
        auto:true,
        scroll: 1,
        wrap: 'circular',
        animation: 700,
        initCallback: mycarousel_initCallback,
        buttonNextHTML: null,
        buttonPrevHTML: null
    });
});

function mycarousel_initCallback(carousel) {
    jQuery('.carousel-next').bind('click', function() {
        carousel.next();
        return false;
    });

    jQuery('.carousel-prev').bind('click', function() {
        carousel.prev();
        return false;
    });

	 jQuery('.carousel-next1').bind('click', function() {
        carousel.next();
        return false;
    });

    jQuery('.carousel-prev1').bind('click', function() {
        carousel.prev();
        return false;
    });
};

</script>

