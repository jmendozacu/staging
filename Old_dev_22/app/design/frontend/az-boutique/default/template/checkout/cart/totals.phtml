<?php
/**
 * Shopping cart totals template
 *
 * @see Mage_Checkout_Block_Cart_Totals
 * @var $this Mage_Checkout_Block_Cart_Totals
 */
?>
<?php if ($this->canApplyMsrp()): ?>
    <div class="cart-msrp-totals"><?php echo $this->__('ORDER TOTAL WILL BE DISPLAYED BEFORE YOU SUBMIT THE ORDER'); ?></div>
<?php else: ?>
    <table id="shopping-cart-totals-table">
        <col />
        <col width="1" />
        <tfoot>
            <?php echo $this->renderTotals('footer'); ?>
            <tr>
            <td  colspan="2"><h4><?php echo $this->__('Loyalty Program - Summary'); ?></h4></td></tr>
           <tr><?php echo $this->getLayout()->createBlock('rewards/checkout_rewardearned')->setTemplate('rewards/checkout/checkoutrewardearned.phtml')->toHtml(); ?></tr>
           <tr><?php echo $this->getLayout()->createBlock('rewards/checkout_rewardspent')->setTemplate('rewards/checkout/checkoutrewardspent.phtml')->toHtml(); ?></tr>
           <?php if((Mage::app()->getStore()->getWebsiteId()=='2') || (Mage::app()->getStore()->getWebsiteId()=='3')): ?>
             <tr><td colspan="2"><p class="learntext"><a id="cartpopup" href="<?php echo $this->getUrl('loyalty-program'); ?>"  target="_blank"><?php echo $this->__('Learn'); ?>  <img src="<?php echo $this->getSkinUrl('images/plus_small.jpg'); ?>" alt="Plus"/></a>  <?php  echo $this->__('about our loyalty program'); ?></p></td></tr>
          <?php else: ?>
               <tr><td colspan="2"><p class="learntext"><a id="cartpopup" href="<?php echo $this->getUrl('programme-fidelite'); ?>"  target="_blank"><?php echo $this->__('Learn'); ?>  <img src="<?php echo $this->getSkinUrl('images/plus_small.jpg'); ?>" alt="Plus"/></a>  <?php  echo $this->__('about our loyalty program'); ?></p></td></tr>
          <?php endif; ?>
        </tfoot>

        <tbody>
            <?php echo $this->renderTotals(); ?>
        </tbody>


    </table>
<?php endif; ?>