<layout version="0.1.0">
<checkout_onepage_index>
   <reference name="head">
   <action method="addCss"><stylesheet>css/socolissimo.css</stylesheet></action>

       <!--
 	<action method="addJs"><script>jquery/jquery-2.1.3.min.js</script></action>
 	-->
	<action method="addJs"><script>jquery/jquery.noconflict.js</script></action>
	<action method="addJs"><script>jquery/jquery.popupoverlay.js</script></action>
    <action method="addItem"><type>skin_js</type><script>js/socolissimo.js</script></action>

    <block type="core/text" name="map.js"><action method="setText">
        <text helper="socolissimo/getUrlGoogleMaps"></text>
    </action></block>

   </reference>

 	<reference name="before_body_end">
    	<block type="core/template" name="socolissimo_additional" after="-" template="socolissimo/additional.phtml" />
    </reference>

</checkout_onepage_index>

<onestepcheckout_index_index>
   <reference name="head">
   	<action method="addCss"><stylesheet>css/socolissimo.css</stylesheet></action>
   	<action method="addJs"><script>jquery/jquery.popupoverlay.js</script></action>
<!-- 	<action method="addJs"><script>jquery/jquery-2.1.3.min.js</script></action> -->
	<action method="addJs"><script>jquery/jquery.noconflict.js</script></action>

    <action method="addItem"><type>skin_js</type><script>js/socolissimo.js</script></action>
    <block type="core/text" name="map.js"><action method="setText">
        <text helper="socolissimo/getUrlGoogleMaps"></text>
    </action></block>
   </reference>

 	<reference name="before_body_end">
    	<block type="core/template" name="socolissimo_additional" after="-" template="socolissimo/additional.phtml" />
    </reference>

</onestepcheckout_index_index>

<jetcheckout_onepage_index>
   <reference name="head">
    <action method="addCss"><stylesheet>css/socolissimo.css</stylesheet></action>
    <action method="addJs"><script>jquery/jquery.popupoverlay.js</script></action>
<!--  <action method="addJs"><script>jquery/jquery-2.1.3.min.js</script></action> -->
  <action method="addJs"><script>jquery/jquery.noconflict.js</script></action>

    <action method="addItem"><type>skin_js</type><script>js/socolissimo.js</script></action>
    <block type="core/text" name="map.js"><action method="setText">
        <text helper="socolissimo/getUrlGoogleMaps"></text>
    </action></block>
   </reference>

  <reference name="before_body_end">
      <block type="core/template" name="socolissimo_additional" after="-" template="socolissimo/additional.phtml" />
    </reference>

</jetcheckout_onepage_index>

<socolissimo_ajax_selector>
    <remove name="right"/>
    <remove name="left"/>

    <block type="socolissimo/selector" name="root" output="toHtml" template="socolissimo/selector.phtml"/>
</socolissimo_ajax_selector>

<socolissimo_ajax_listrelais>
    <remove name="right"/>
    <remove name="left"/>

    <block type="socolissimo/listrelais" name="root" output="toHtml" template="socolissimo/listrelais.phtml"/>
</socolissimo_ajax_listrelais>

<checkout_cart_index>
  <reference name="head">
    <action method="addItem"><type>skin_js</type><script>js/socolissimo.js</script></action>
  </reference>
<reference name="checkout.cart.shipping">
    <action method="setTemplate"><template>socolissimo/shipping.phtml</template></action>
</reference>
</checkout_cart_index>

</layout>
